<h1>Reports of student slots with lacking approval</h1><br />

<p>Total missing: <%= @missing_slots.size %></p>

<table class="table table-bordered">
  <tr>
    <th>Date</th>
    <th>Load</th>
    <th>Jumper</th>
    <th>Jumptype</th>
    <th>HL</th>
    <th>Jumpmaster</th>
  </tr>

  <% @missing_slots.each do |slot|%>
    <tr>
      <td><%= slot.load.departure_timestamp %></td>
      <td><%= link_to(slot.load.loadfortheday, edit_load_path(slot.load))  %></td>
      <td><%= link_to(slot.jumper.name, jumper_path(slot.jumper)) %></td>
      <td><%= slot.jumptype %></td>
      <td><%= link_to(slot.load.hl.name, jumper_path(slot.load.hl)) %></td>
      <td>Not implemented</td>
    </tr>
  <% end %>

</table>

